# include <string>
using namespace std;

class Solution {
public:
   int numberOfSubstrings(string s) {
        int count = 0, n = s.size();
        int hash[3] = {0};
        int l = 0;
        for (int r = 0; r < n; r++) {
            hash[s[r] - 'a']++;

            while (hash[0] && hash[1] && hash[2]) {
                count = count + (n - r) ;
                hash[s[l] - 'a']--;
                l++;
            }
        }
        return count;
    }
};